  <div class="container">
    <div class="row">
      <div class="col-2"></div>
      <div class="col-8">
        

        <h1>Chatroom Show Page</h1>

        <%= form_tag "/chatrooms/#{@chatroom.id}/comments" do %>
          <%= text_field_tag :text %>
          <%= submit_tag "Submit"%>
        <% end %>

        <h3>Chat Histories</h3>
        <section>
          <% @comments.each do |comment| %>
            <p><%= comment.user.first_name%>:
            <%= comment.text%></p>
          <% end %>

        </section>



      </div>
      <div class="col-2"></div>
    </div>

  </div>
