  <div class="container">
    <div class="row">
      <div class="col-2"></div>
      <div class="col-8">
        

        <h1>Chatroom Show Page</h1>


        <h3>Chat Histories</h3>
        <section>
          <div id="messages-table" class="border">
            <% @comments.each do |comment| %>
              <p><%= comment.user.first_name%>:
              <%= comment.text%></p>
            <% end %>
          </div>
        </section>

        <%= form_tag "/chatrooms/#{@chatroom.id}/comments", remote: true do %>
          <%= text_area_tag :text, nil, id: "message_content", class: "form-control" %>
          <%= submit_tag "Submit", :style => "display: none;"%>
        <% end %>


      </div>
      <div class="col-2"></div>
    </div>

  </div>
