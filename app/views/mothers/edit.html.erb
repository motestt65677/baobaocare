
<div class="wrapper">
  <div class="container">
      <div class="row">
      <div class="col-2"></div>
      <div class="col-8">
        <h1>Parent Edit Page</h1>
  
        <%= form_for @mother do |form|%>
          <div>
            <%=form.label :first_name%>
            <%=form.text_field :first_name, class: 'form-control' %>
          </div>
          <div>
            <%=form.label :last_name%>       
            <%=form.text_field :last_name, class: 'form-control' %>
          </div>
          <div>
            <%=form.label :email%>       
            <%=form.text_field :email, class: 'form-control' %>
          </div>
          <div>
            <%=form.label :avatar%>
            <%= form.file_field :avatar, class: 'form-control' %>
          </div>
          <%=form.submit "Update", class: "btn btn-primary mt-5" %>
        <%end%>
  
      </div>
      <div class="col-2"></div>
      </div>
  </div>
</div>