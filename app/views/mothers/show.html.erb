<div class="container">
  
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <!--<h1>Mother's Show Page</h1>-->
      
      <div class="mother_info">
          <h1>Hello <span><%= @mother.first_name%>!</span></h1> 
          <p>Your Email is: <span><%=@mother.email%></span></p>
          <%=link_to edit_mother_path(@mother) do%> 
            <span>Edit Account</span> 
          <%end%>
      </div>
      
      <h2>Here Are Your Babies</h2>
      <div class="child_wrap">
        <%@mother.children.each do |child|%>
          
            <div class='child_field'>
              
              <div class="child_img">
                <img src=''></img>
              </div>
              
              <p><%=child.name%></p>
              
            </div>
          
        <%end%>
      </div>



      
    </div>
    <div class="col-2"></div>
  </div>
</div>
