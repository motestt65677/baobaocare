<div class="wrapper">
  <div class="mother_wrap">
        <div class="mother_header">
          <div class="mother_avatar">
            <% if @mother.avatar.url.nil? %>
                <%= image_tag 'newborn.png' %>
            <% else %>
                <%= image_tag @mother.avatar.url %>
            <% end %> 
          </div>
          
          <div class="mother_info">
              <h1><span><%=" #{@mother.first_name} #{@mother.last_name}"%></span></h1> 
              <p>Email: <span><%=@mother.email%></span></p>
              <%=link_to 'edit', edit_mother_path(@mother)%></div>

          </div>  
        
   <h2><%="#{@mother.first_name}'s"%> Babies</h2>
          <div class="children_wrap">
            
            <%@mother.children.each do |child| %>
              <div class='child_field'>
                
                    <div class="child_img">
                      <%= link_to mother_child_path(@mother, child) do %>
                        <% if child.avatar.url.nil? %>
                          <%= image_tag 'newborn.png' %>
                        <% else %>
                          <%= image_tag child.avatar.url %>
                        <% end %>  
                    </div>
                      <span class='child_name'><%=child.name%></span>
                      <br/>
                      <span class='child_name'><%=child.age%> years old.</span>
              
                      <% end %>
              </div>
            <%end%>

</div>          
<!--           <div class='child_field'>
            <div class="add_box" data-toggle="modal" data-target="#exampleModal">+</div>
          </div>
        </div> -->
        
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Baby</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <%= form_tag "/mothers/#{@mother.id}/children" do%>
  
                <div class="modal-body">
                    <div>
                      <%=label_tag :name%>
                      <%=text_field_tag "child[name]"%>
                    </div>
                    <div>
                      <%=label_tag :birthday%>
                      <%=text_field_tag "child[birthday]"%>
                    </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <%=submit_tag "Add"%>
                </div>
              <% end %>
  
            </div>
          </div>
        </div>

</div>