<div class="wrapper">  

  <div class ="container">

    <h1>Reservations</h1>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Doctor</th>
          <th scope="col">Specialty</th>
          <th scope="col">Child</th>
          <th scope="col">Start Date</th>
          <th scope="col">End Date</th>
          <th scope="col">Start Time</th>
          <th scope="col">End Time</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
      

      <% @reservations.each do |reservation| %>
         <td><%="Dr. #{reservation.chatroom.doctor.first_name} #{reservation.chatroom.doctor.last_name}"%></td> 
          <td><%=reservation.chatroom.doctor.specialty%></td>
          <td><%=reservation.chatroom.child.name%></td>
          <%byebug%>
          <td><%=reservation.start_date%></td>
          <td><%=reservation.end_date%></td>
          <td><%=reservation.start_time.strftime('%I:%M %p')%></td>
          <td><%=reservation.end_time.strftime('%I:%M %p')%> </td>
          <td><%= link_to 'remove', delete_mothers_reservations_path(current_user, reservation), method: 'delete', data: { confirm: "Are you sure?" } %></td>
        </tr>
       <%end%> 
      </tbody>
    </table>
  </div>
</div>