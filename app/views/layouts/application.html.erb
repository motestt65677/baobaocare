<!DOCTYPE html>
<html>
<head>

  <link href="https://fonts.googleapis.com/css?family=Arvo" rel="stylesheet">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= csrf_meta_tag %>



</head>
<body>
 
    <div id="container">
      
        <div id="left">
            <a href='/'>
              <%= image_tag("newborn.png", class: "img-nav") %>
            </a>
        </div>
        
        <div id="right">
            <div class="dropdown">
              <% if signed_in? %> 
                <% if current_user.type == "Mother" -%> 
                <button class="dropbtn">What do you want to do?</button>
                <div class="dropdown-content">
                  <a href=''>View baby profile</a>
                  <%= link_to "Connect with a doctor", doctors_path %> 
                  <a href=''>View chatroom history</a>
                </div>
                <% elsif current_user.type == "Doctor" -%>
                <button class="dropbtn">What do you want to do?</button>
                <div class="dropdown-content">
                  <%= link_to "View my profile", doctor_path(current_user) %>  
    
                  <%= link_to "View chatrooms", chatrooms_path %> 
    
                <% end %>
    
              <% end %>

              </div>
                 
               <div id="header">
                <% if signed_in? -%>
                <%= button_to t(".sign_out"), sign_out_path, method: :delete %>
                <% else -%>
                <%= link_to t(".sign_in"), sign_in_path %>
                <% end -%>
      
               </div>
        </div>       
    </div>
     
  
  
  

  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>"><%=h value %></div>
    <% end %>
  </div>

 

  <%= yield %>
</body>
</html> 
